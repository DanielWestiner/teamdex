<div class="container">
  <h3>Here are the current Top Ten Teams</h1>
  <br>
  <div class="row">
  {{#each topTenTeams as |team|}}
  <div class="card col-sm-12 m-2" style="width: 18rem;">
    <div class="row justify-content-left">
      {{#each team.pokemons as |pokemon|}}
      <img class="card-img-top col" src={{pokemon.sprite}} alt={{pokemon.pokemon_name}}/>
      {{/each}}
    </div>
    <div class="card-body d-flex flex-column">
      <h5 class="card-title">{{team.team_name}}</h5>
      <p class="card-text">Created by {{team.user.username}}</p>
      <a href="/top-team/{{team.id}}" class="btn btn-primary mt-auto btn-block">View Full Team</a>
    </div>
  </div>
  {{/each}}
  </div>
</div>
<div class='row justify-space-between-md'>
  <form>
  <div class="form-group">
    <label for="signup-username">Username</label>
    <input type="text" class="form-control" id="name-signup" aria-describedby="nameHelp" placeholder="Enter a username">
  </div>
  <div class="form-group mt-2">
    <label for="signup-email">Email address</label>
    <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp" placeholder="Enter your email">
    <small id="emailHelp" class="form-text text-muted">Please enter a valid email to sign up</small>
  </div>
  <div class="form-group mt-2">
    <label for="signup-password">Password</label>
    <input type="password" class="form-control mb-4" id="password-signup" placeholder="Password">
  </div>
  <a href="/login">Already have an account? Log in here</a>
  <br>
  <button class="btn btn-primary mt-4" id="signup-btn">Submit</button>
</form>

</div>

<script src='./js/signup.js'></script>




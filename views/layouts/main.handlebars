<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Pokemon Team Builder</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Miltonian&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }
    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
    </style>
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-inverse bg-inverse static-top navbar-dark bg-dark">
        <div class="bg-dark d-flex p-2" id="navbarHeader">
          <a class="navbar-brand" href="/">Home</a>
          <ul class="navbar-nav mr-auto">
            {{#if logged_in}}
            <li class="nav-item active dashboard">  
            <a class="nav-link" href="/dashboard">Dashboard <span class="sr-only"></span></a>
            </li>
            <li class="nav-item active logout">  
              <a class="nav-link" href="/" id="logout">Log Out <span class="sr-only"></span></a>
            </li>
            <li class="nav-item active" id="create-button">
              <a href="/create-team"><button class="btn btn-light my-2 my-sm-0">Create a Team</button></a>
            </li>
            {{else}}
            <li class="nav-item active login">
            <a class="nav-link" href="/login">Login <span class="sr-only"></span></a>
            </li>
            <li class="nav-item active signup">
            <a class="nav-link" href="/signup">Sign up <span class="sr-only"></span></a>
            </li>
            {{/if}}
          </ul>
        </div>
    </nav>
  </header>
  <main>
    <section class="team-builder">
    <div class="parallax">
      <p id="title-text">
        <h1 class="text-center  fw-bold text-light">T e a m d e x</h1>
        <h1 class="text-center  fw-bold text-light">P o k e m o n  &nbsp;T e a m&nbsp;</h1>
        <h1 class="text-center  fw-bold text-light">B u i l d e r</h1>
        {{#unless logged_in}}
        <div class="text-center mt-4">
        <a href="/login" class="btn btn-primary mx-auto" role="button">Login</a>
        <a href="/signup" class="btn btn-primary mx-auto" role="button">Sign Up!</a>
        </div>
        {{/unless}}
      </p>
    </div>
    </section>
    <div class="album py-5 bg-light">
      <div class="container row">
        <div class="card-deck">
          <div class="">
          {{{body}}}
          </div>
        </div>
      </div>
    </div>
  </main>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <footer class="text-muted py-5">
    <div class="container">
      <p class="float-end mb-1">
        <a href="#">Back to top</a>
      </p>
      <p class="mb-1">Website Built by: Andrew, Rich, Michael, and Dan</p>
      <p class="mb-0"></a></p>
    </div>
  </footer>
</body>

</html>
    <datalist id="pokemon-list">
      </div>
    </div>
    </datalist>
    </div>
    <button
      type="submit"
      id="add-pokemon-btn"
      class="btn btn-outline-primary mb-2"
    >Add Pokemon</button>
    <button type="submit" id="add-team-btn" class="btn btn-primary mb-2">Add to
      Team</button>
  </section>

      <option selected>Choose a Game:</option>
      {{#each team.game}}
      <option value={{this}}>{{this.team.game}}</option>
      {{/each}}
    </select>
    </div>

    <div class="row">
    <label>Choose a pokemon:</label>
      <div class="col-xs-5 col-lg-1">
